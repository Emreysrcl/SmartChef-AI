<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/login-register.css">
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    <link rel="manifest" href="/assets/site.webmanifest">
    <title>Login & Register</title>
</head>
<body>
    <ul class="nav nav-pills justify-content-center mt-3">
        <li class="nav-item">
            <button class="nav-link active custom-tab " id="show-login" >Login</button>
        </li>
        <li class="nav-item">
            <button class="nav-link custom-tab" id="show-register">Register</button>
        </li>
    </ul>
    

    <% if (message) { %>
        <div class="alert alert-danger text-center">
            <%= message %>
        </div>
    <% } %>

    <form action="/login" method="post" id="login-form" class="active-form">
        <input type="text" name="username" id="username" placeholder="E-mail" required>
        <input type="password" name="password" id="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>

    <form action="/register" method="post" id="register-form" enctype="multipart/form-data">
        <input type="text" name="username" id="reg-username" placeholder="E-mail" required>
        <input type="password" name="password" id="reg-password" placeholder="Password" required>
        <input type="text" name="name" id="name" placeholder="Name" required>
        <input type="text" name="surname" id="surname" placeholder="Surname" required>
        <input type="number" name="age" id="age" placeholder="Age" required>
        <input type="tel" name="tel" id="tel" placeholder="Phone Number" required>
        <input type="text" name="country" id="country" placeholder="Country" required>
        <label for="profilimg" class="file-upload-label">Select Profile Photo</label>
        <input type="file" id="profilimg" name="profilimg" accept="image/*">
        <button type="submit">Register</button>
    </form>

    <script>
        document.querySelectorAll(".custom-tab").forEach(tab => {
            tab.addEventListener("click", function() {
                document.querySelectorAll(".custom-tab").forEach(el => el.classList.remove("active"));
                this.classList.add("active");
    
                if (this.id === "show-login") {
                    document.getElementById("login-form").classList.add("active-form");
                    document.getElementById("register-form").classList.remove("active-form");
                } else {
                    document.getElementById("register-form").classList.add("active-form");
                    document.getElementById("login-form").classList.remove("active-form");
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
